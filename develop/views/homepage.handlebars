<div class="jumbotron" id="hero">
    <h1>ShapeShift</h1>
</div>
<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
            <div class="side">
                <h3>Try these Workouts!</h3>
                {{#each workouts as |workout|}}
                <div>
                        <h4> {{format_date workout.workout_date}}</h4>
                        <p>{{workout.category}}</p>
                        <p>{{workout.details}}</p>     
                </div>
              {{/each}}

            </div>

        </div>
        <div class="container-fluid text-center">
            <div class="row content">
                <div class="col-sm-8 text-center">
                    <h1>ShapeShift</h1>
                    <h3>Have YOU been coding and havent left your chair all day?</h3>
                    <h3>Wanting to change your shape?</h3>
                    <h3>ShapeShift is for you!</h3>
                    

                    <h2>Blogs</h2>
                    {{#each blogs as |blog| }}
                    <div class="post">
                        <h3>{{blog.user.name}}</h3>
                          <h5>{{blog.title}}</h5>
                        <p>{{blog.description}}</p>
                        {{/each}}


                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<footer class="container-fluid text-center">
    <p>ShapeShifters </p>
</footer>

</body>