      <use xlink:href="#s-text" class="text-copy"></use>
      <use xlink:href="#s-text" class="text-copy"></use>
    </g>
  </svg>
</div>
<footer class="container-fluid text-center">
  <p>ShapeShifters </p>
</footer>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<!-- Modal HTML Markup -->
<div id="ModalLoginForm" class="modal fade">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-body">
          <h1>Add Post</h1>
          <form role="form" method="POST" action="">
            <input type="hidden" name="_token" value="">
            <div class="form-group">
              <label class="control-label">Title: </label>
              <div>
                <input type="text" class="form-control input-lg"  id="post-title" name="name" value="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label">Image: </label>
              <button id="upload_widget" class="cloudinary-button">Upload files</button>
            </div>
            
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Caption</label>
              <textarea class="form-control" id="post-caption" rows="3"></textarea>
            </div>
            <div class="form-group">
              <div>
                <button id="submit-post" type="submit" class="btn btn-success">
                  POST
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

           
                  

  
  <script src="/js/addPost.js">