
<div class="hero">
  <div class="jumbotron" id="hero">
    <h1>ShapeShift</h1>
  </div>
  <div class="container-fluid text-center ">
    <div class="row content ">
      <div class="col-sm-2 sidenav ">
        <div class="side ">
          <h3 id="underlined">Try these Workouts!</h3>
          {{#each workouts as |workout|}}
          <a href="/workouts">
            <h4> {{format_date workout.workout_date}}</h4>
            <p>{{workout.category}}</p>
            <p>Reps: {{workout.reps}}</p>
            <p>Sets: {{workout.sets}}</p>
            <p>Duration: {{workout.duration}}</p>
            <p>Distance: {{workout.distance}}</p>
            <p>Details: {{workout.details}}</p>
            <p>_____________________</p>
          </a>
          {{/each}}
        </div>
      </div>
      <div class="container-fluid text-center">
        <div class="row content">
          <div class="col-sm-8 text-center">
            <h1> <div id="top">Welcome {{user}}</div></h1>
           
            <h2>Recent Posts </h2>
            <div class"=down">
            <button id="button" data-toggle="modal"
                data-target="#ModalLoginForm">+</button>
</div><section class="main">
            {{#each posts as |post| }}
            
            
    <div class="wrapper">
        <div class="left-col">

            <div class="post">
                <div class="info">
                    <div class="user">
                        <div class="profile-pic"><img src="/images/ping.png" alt=""></div>
                        <p class="username">{{post.title}}</p>
                    </div>
                    
                </div>
                <img src="{{post.image}}" class="post-image" alt="">
                <div class="post-content">
                    <p class="description"><span>{{post.user.name}} </span> {{post.caption}}</p>
                    <p class="post-time">{{format_date post.date}}</p>
                </div>
                
            </div>
            </section>
            
            {{/each}}
          </div>
  
        </div>
      </div>
    </div>
  </div>
</div>

 <div class="container">
